{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://omspy.tech/schema/scenario/base.json",
  "title": "Base Scenario Schema",
  "description": "Common schema for all scenario types",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "$schema": {"type": "string", "format": "uri"},
    "$id": {"type": "string", "format": "uri"},

    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Scenario name"
    },
    "description": {
      "type": "string",
      "description": "Scenario description"
    },
    "type": {
      "type": "string",
      "enum": ["max_self_consumption", "time_based_mix", "backup_priority", "cost_optimization", "custom"],
      "description": "Scenario type - determines specific schema to use"
    },
    "version": {
      "type": "string",
      "default": "1.0",
      "description": "Scenario version"
    },

    "technologies": {
      "type": "array",
      "items": {"type": "string", "pattern": "^[A-Za-z0-9_-]+$"},
      "uniqueItems": true,
      "minItems": 1,
      "description": "List of technology IDs to include"
    },

    "data_sources": {
      "type": "object",
      "properties": {
        "load_profile": {"type": "string"},
        "generation_profiles": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        },
        "price_profiles": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      },
      "required": ["load_profile"]
    },

    "global_constraints": {
      "type": "object",
      "description": "Common constraints for all scenarios",
      "properties": {
        "max_grid_import_kw": {"type": "number", "minimum": 0},
        "max_grid_export_kw": {"type": "number", "minimum": 0},
        "emergency_backup_hours": {"type": "number", "minimum": 0}
      }
    }
  },

  "required": ["name", "type", "technologies", "data_sources"]
}